\pgfdeclareimage[height=1.5cm]{university-logo}{univer-logo}
\pgfdeclareimage[width=.2\paperwidth]{small-logo}{uni-logo}
\pgfdeclareimage[width=.5\paperwidth]{large-logo}{uni-logo}

\definecolor{MMURed}{RGB}{213,24,0}
\definecolor{spbuTerr}{HTML}{9F2D20}
\definecolor{spbuGray}{HTML}{A8ADB4}
\pgfdeclarehorizontalshading{doubleShade}
  {1.5pt}{color(0cm)=(white); color(.5\textwidth)=(gray); color(\textwidth)=(white)}
\pgfdeclarehorizontalshading{singleShade}
  {.5pt}{color(0cm)=(gray); color(.8\textwidth)=(gray); color(\textwidth)=(white)}

\setbeamercolor{item}{fg=spbuTerr}
\setbeamercolor{title}{fg=spbuTerr}
\setbeamercolor{block title}{fg=spbuTerr,bg=spbuTerr!15!white}
\setbeamercolor{block body}{bg=MMURed!5!white}
\setbeamercolor{section in head/foot}{fg=spbuTerr}
\setbeamercolor{separator}{fg=spbuTerr}
\setbeamercolor{page number in head/foot}{bg=spbuTerr!30!white,fg=spbuTerr}
\setbeamercolor{footline}{bg=spbuTerr!30!white,fg=spbuTerr}
\setbeamercolor{mini frame}{fg=spbuTerr}
\setbeamertemplate{mini frame in other subsection}[default][40]
\setbeamercolor{section in toc}{fg=black,bg=white}
\setbeamercolor{alerted text}{fg=spbuTerr!80!spbuGray}
\setbeamercolor{titlelike}{parent=palette primary,fg=spbuTerr}
\setbeamercolor*{palette primary}{fg=spbuTerr!60!black,bg=spbuGray!15!white}

\usecolortheme[named=spbuTerr]{structure}

\RequirePackage{pifont}
\useinnertheme{rounded}
\setbeamertemplate{section in toc}[sections numbered]
\setbeamertemplate{subsection in toc}[subsections numbered]
\setbeamertemplate{itemize items}[circle]

\setbeamertemplate{frametitle}[default][left]

\setbeamertemplate{headline}{
\vskip1pt\hskip2pt
\hspace*{23pt}\insertnavigation{.65\paperwidth}
\vskip2pt
\hfill\raisebox{-0.88\paperheight}[0pt][0pt]{\pgfuseimage{university-logo}\hskip10pt}
}

\setbeamertemplate{section in head/foot}{\insertsectionhead\space}
\setbeamertemplate{subsection in head/foot}{\guillemotright\space\insertsubsectionhead}

\setbeamertemplate{footline}{
\pgfuseshading{singleShade}\vskip-10pt
\hskip5pt\insertshortauthor\hskip5pt{\usebeamercolor[fg]{separator}\textbullet}\hskip5pt \insertshorttitle
\logo{\pgfuseimage{university-logo}}
}
